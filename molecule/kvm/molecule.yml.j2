---
# role: {{ role_name }}
# file: molecule/kvm/molecule.yml
dependency:
  name: galaxy
driver:
  name: vagrant
  provider:
    name: libvirt
    type: libvirt
    options:
      memory: 4096
      cpus: 2
lint: |
  set -e
  yamllint .
  ansible-lint
  flake8
platforms:
  - name: {{ role_name | replace('ansible-role-', '') }}-arch
    box: "archlinux/archlinux"
  - name: {{ role_name | replace('ansible-role-', '') }}-centos8
    box: "centos/8"
  - name: {{ role_name | replace('ansible-role-', '') }}-debian10
    box: "debian/buster64"
  - name: {{ role_name | replace('ansible-role-', '') }}-fedora31
    box: "fedora/31-cloud-base"
  - name: {{ role_name | replace('ansible-role-', '') }}-ubuntu1804
    box: "generic/ubuntu1804"
provisioner:
  name: ansible
  log: True
  playbooks:
    prepare: ../resources/playbooks/prepare.yml
    converge: ../resources/playbooks/converge.yml
  inventory:
    group_vars:
      all:
        {{ role_name | replace('ansible-role-', '') | replace('-','_') }}_enabled: True
verifier:
  name: testinfra
  env:
    PYTHONWARNINGS: "ignore"
  directory: ../resources/tests
  options:
    v: True
    sudo: True
{{ blank_line }}